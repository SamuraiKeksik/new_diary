@{    
    IEnumerable<Note> notes = Model.notes;
    string title;
    string text;
}

<div class="row">
    <div class="list-group col-4">
        @if (notes.Count() == 0)
        {
            <text>Empty</text>
        }
        else
        {
            foreach(var note in notes)
            {
                
                title = note.Title == string.Empty ? "Title" : note.Title;
                text = note.Text == string.Empty ? "Empty note" : note.Text;
                
                <a href="#" class="note-box list-group-item list-group-item-action " aria-current="true">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@title</h5>
                        <small>3 days ago</small>
                    </div>
                    <p class="mb-1">@text</p>
                </a>
            }
           
        }
